{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "jest",
      "puppeteer",
      "jest-environment-puppeteer",
      "expect-puppeteer"
    ],
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
